@model VetManage.Web.Models.Specialities.SpecialityViewModel

@{
    ViewData["Title"] = "Single Speciality";
}

<div class="container-fluid p-3">
    <div class="content-container dark-5 py-3">
        <div class="container">
            <div class="mb-3">
                <h1 class="fs-1">@Model.Name</h1>
            </div>
            <div class="mb-3">
                @Html.Raw(@Model.Description)
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Edit" asp-route-id="@Model.Id" type="submit" id="submitBtn" class="btn btn-primary text-light">Edit</a>
                </div>
            }
        </div>
    </div>
</div>

