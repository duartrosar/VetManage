@model VetManage.Web.Models.Users.UserViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="content-container p-3">
    <div class="dark-5">
        <div class="p-3 d-flex justify-content-between align-items-center border-bottom">
            <a asp-action="Index" class="btn btn-outline-light">Back</a>
            <h2>User Details</h2>
        </div>
        <div class="p-3">
            <div class="flex-fill" style="max-width: 1200px;">
                <div class="row">
                    <div class="col">
                        <div class="h-100">
                            <div class="image-preview border-opacity-50 d-flex justify-content-center align-items-center" style="background-image: url(@Url.Content(@Model.ImageFullPath))">
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-4">
                            <label asp-for="FirstName">First Name</label>
                            <input id="firstName" asp-for="FirstName" class="form-control" readonly/>
                        </div>
                        <div class="mb-4">
                            <label asp-for="LastName">Last Name</label>
                            <input id="lastName" asp-for="LastName" class="form-control" readonly/>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Gender">Gender</label>
                            <input id="gender" asp-for="Gender" class="form-control" readonly/>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Username">Email</label>
                            <input asp-for="Username" class="form-control" readonly/>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-4">
                            <label asp-for="DateOfBirth">DateOfBirth</label>
                            <input type="date" asp-for="DateOfBirth" class="form-control" readonly/>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Address">Address</label>
                            <input id="address" asp-for="Address" class="form-control" readonly/>
                        </div>
                        <div class="mb-4">
                            <label asp-for="MobileNumber">Mobile Number</label>
                            <input id="mobileNumber" asp-for="MobileNumber" class="form-control" readonly/>
                        </div>
                        <div class="mb-3 form-check d-flex align-items-center" style="min-height: 62px">
                            <input class="form-check-input me-1" asp-for="IsAdmin" id="flexCheck" readonly/>
                            <label class="form-check-label" for="flexCheck">Is Admin?</label>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

