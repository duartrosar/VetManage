@model VetManage.Web.Models.CalendarViewModel

@{
    DateTime minVal= new DateTime(2000,01,01, 07,00,00);
    DateTime maxVal = new DateTime(2000,01,01, 18,00,00);
}

<div class="modal fade" id="newAppointmentModal" tabindex="-1" role="dialog" aria-labelledby="appointmentFormTitle" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header bg-dark">
        <div class="container">
            <div class="div d-flex align-items-center justify-content-center">
                <h5 class="modal-title" id="appointmentFormTitle">New Owner</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
        </div>
      </div>
      <div class="modal-body bg-dark">
          <div class="d-flex align-items-center justify-content-center mt-md-5 pt-md-5">
              <form class="flex-fill" asp-action="Create" id="appointmentForm" method="post" style="max-width: 500px;">
                <div asp-validation-summary="ModelOnly"></div>
                <input asp-for="@Model.Appointments" type="hidden" class="form-control"/>

                <div class="mb-3">
                    <label asp-for="@Model.Appointment.Id">Id</label>
                    <input asp-for="@Model.Appointment.Id" class="form-control"/>
                    <span asp-validation-for="@Model.Appointment.Id" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Appointment.Title">Tittle</label>
                    <input asp-for="@Model.Appointment.Title" class="form-control"/>
                    <span asp-validation-for="@Model.Appointment.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Appointment.Description">Description</label>
                    <input asp-for="@Model.Appointment.Description" class="form-control"/>
                    <span asp-validation-for="@Model.Appointment.Description" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for="@Model.Appointment.StartTime">Start Time</label>
                        <input asp-for="@Model.Appointment.StartTime" id="startHidden" type="hidden" class="form-control" />
                        <input id="startTime" class="timepicker form-control" name="timepicker"/>
                        <span asp-validation-for="@Model.Appointment.StartTime" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="@Model.Appointment.EndTime">End Time</label>
                        <input asp-for="@Model.Appointment.EndTime" id="endHidden" type="hidden" class="form-control" />
                        <input id="endTime" class="timepicker form-control" name="timepicker"/>
                        <span asp-validation-for="@Model.Appointment.EndTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


          