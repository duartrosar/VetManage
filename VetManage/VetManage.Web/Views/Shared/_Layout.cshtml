<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetManage.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css"/>
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.2.43/material.css" />

    <link type="text/css" rel="stylesheet" href="~/lib/datatables.net-bs5/dataTables.bootstrap5.min.css"/>

    <link rel="stylesheet" href="~/lib/jquery-timepicker/jquery.timepicker.min.css"/>

    <link rel="stylesheet" href="~/css/style.css" />

    <script src="https://unpkg.com/feather-icons"></script>
    
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
</head>
<body>
    <div class="background-image"></div>
    <header>
        <partial name="_Navbar"/> 
        @*@if(User.Identity.IsAuthenticated)
        {
            <partial name="_Sidebar"/>
        } 
        else if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            // TO DO
        }
        else
        {
        }*@
    </header>
    @if (User.Identity.IsAuthenticated)
    {
        <partial name="_Sidebar"/>
    }

    <div class="container-fluid p-0">
        @if (User.Identity.IsAuthenticated)
        {
            <main role="main" class="content open">
                @RenderBody()
            </main>
        }
        else
        {
            <main role="main" class="content">
                @RenderBody()
            </main>
        }
        
    </div>

    

    @if (!User.Identity.IsAuthenticated)
    {
        
    <div class="footer-container">
        <footer class="footer dark-5 py-5 d-flex justify-content-start align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col d-flex flex-column justify-content-center align-items-center">
                        <div class="footer-brand">
                            <div class="d-flex brand-container justify-content-start align-items-center mb-3">
                                <div class="brand-image-container">
                                    <img class="brand-image" src="~/images/logos/paw-logo.png" alt="" />
                                </div>
                                <div class="brand-name-container ps-3">
                                    <span class="brand-name">VetManage</span>
                                </div>
                            </div>
                            <div class="brand-slogan-container">
                                <span class="brand-slogan fw-lighter">Lorem ipsum dolor sit amet consectetur adipisicing elit.</span>
                            </div>
                        </div>
                    </div>
                    <div class="col d-flex flex-column justify-content-center align-items-center">
                        <div class="footer-menu">
                            <div class="d-flex flex-column menu-container justify-content-between align-items-start">
                                <h4 class="mb-5">Company</h4>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <a class="text-light fw-lighter" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    </li>
                                    <li class="mb-2">
                                        <a class="text-light fw-lighter" asp-area="" asp-controller="Home" asp-action="About">About</a>
                                    </li>
                                    <li class="mb-2">
                                        <a class="text-light fw-lighter" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                                    </li>
                                    <li class="mb-2">
                                        <a class="text-light fw-lighter" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                    </li>
                                    <li class="mb-2">
                                        <a class="text-light fw-lighter" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col d-flex flex-column justify-content-center align-items-center">
                        <div class="footer-contact">
                            <div class="d-flex flex-column menu-container justify-content-between align-items-start">
                                <h4 class="mb-5">Contact Us</h4>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <p class="contact-item m-0 py-0 text-light fw-lighter">***********</p>
                                    </li>
                                    <li class="mb-2">
                                        <p class="contact-item m-0 py-0 text-light fw-lighter">261 354 962</p>    
                                    </li>
                                    <li class="mb-2">
                                        <p class="contact-item m-0 py-0 text-light fw-lighter">vetmanage@vetmanage.com</p>
                                    </li>
                                    <li class="mb-2">
                                        <p class="contact-item m-0 py-0 text-light fw-lighter">65 The Street, Narnia</p>
                                    </li>
                                    <li class="mb-2">
                                        <p class="contact-item m-0 py-0 text-light fw-lighter">***********</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                @*&copy; 2022 - VetManage*@
            </div>
        </footer>
    </div>
    }
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/Form.js" asp-append-version="true"></script>
    <script src="~/js/Sidebar.js" asp-append-version="true"></script>
    
    <script type="text/javascript" src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/lib/datatables.net-bs5/dataTables.bootstrap5.min.js"></script>
    <script type="text/javascript" src="~/js/elipsis.js"></script>
    <script type="text/javascript" src="~/lib/jquery-timepicker/jquery.timepicker.min.js"></script>

    <!-- Popper.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://cdn.syncfusion.com/ej2/20.2.43/dist/ej2.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js" ></script>

    <ejs-scripts></ejs-scripts>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        feather.replace();
    </script>
</body>
</html>
